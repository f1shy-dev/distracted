{
  "private": true,
  "name": "distracted",
  "version": "0.0.0",
  "description": "Monorepo workspace for distracted.",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "typescript": "^5.9.3",
      "@typescript/native-preview": "^7.0.0-dev",
      "oxfmt": "^0.21.0",
      "oxlint": "^1.36.0",
      "oxlint-tsgolint": "^0.10.1",
      "knip": "^5.79.0"
    }
  },
  "scripts": {
    "lint": "bun run --workspaces --if-present lint",
    "lint:fix": "bun run --workspaces --if-present lint:fix",
    "lint:ci": "bun run --workspaces --if-present lint:ci",
    "format": "bun run --workspaces --if-present format",
    "knip": "bun run --workspaces --if-present knip",
    "check": "bun run --workspaces --if-present check",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules && bun run --workspaces --if-present clean"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "bun-types": "^1.2.0",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "typescript": "catalog:",
    "@typescript/native-preview": "catalog:"
  }
}
