{
  "name": "@distracted/extension",
  "version": "1.3.0",
  "private": true,
  "description": "blocks distracting websites! do mini tasks to get back on them...",
  "keywords": [
    "block",
    "browser",
    "distracted",
    "extension",
    "task",
    "website"
  ],
  "homepage": "https://github.com/f1shy-dev/distracted",
  "bugs": {
    "url": "https://github.com/f1shy-dev/distracted/issues"
  },
  "license": "MIT",
  "author": "f1shy-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/f1shy-dev/distracted.git"
  },
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsgo --noEmit",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "lint:ci": "oxlint --type-aware --format github",
    "format": "oxfmt",
    "prepare": "wxt prepare",
    "knip": "knip",
    "check": "bun run lint:fix && bun run format && bun run compile && bun run knip"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@tabler/icons-react": "^3.36.0",
    "@tailwindcss/vite": "^4.1.17",
    "babel-plugin-react-compiler": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "shadcn": "^3.6.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev",
    "@wxt-dev/module-react": "^1.1.5",
    "knip": "^5.79.0",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "oxlint-tsgolint": "^0.10.0",
    "typescript": "^5.9.3",
    "wxt": "^0.20.6"
  }
